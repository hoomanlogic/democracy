{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    //"sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "__DEV__": true,
    "BUILD_VERSION": true,
    "clientApp": true,
    "fetch": true,
    "Highcharts": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true
  },
  "rules": {    
    // PLUGINS
    // "react/display-name": [ 1, {"ignoreTranspilerName": false }],
    // "react/forbid-prop-types": [1, {"forbid": ["any"]}],
    // "react/jsx-boolean-value": 1,
    // "react/jsx-closing-bracket-location": 0,
    // "react/jsx-curly-spacing": 1,
    // "react/jsx-indent-props": 0,
    // "react/jsx-key": 1,
    // "react/jsx-max-props-per-line": 0,
    // "react/jsx-no-bind": 1,
    // "react/jsx-no-duplicate-props": 1,
    // "react/jsx-no-literals": 0,
    // "react/jsx-no-undef": 1,
    // "react/jsx-pascal-case": 1,
    // "react/jsx-sort-prop-types": 0,
    // "react/jsx-sort-props": 0,
    "react/jsx-space-before-closing": [2, "never"],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 2,
    // "react/no-danger": 1,
    // "react/no-did-mount-set-state": 1,
    // "react/no-did-update-set-state": 1,
    // "react/no-direct-mutation-state": 1,
    // "react/no-multi-comp": 1,
    // "react/no-set-state": 0,
    // "react/no-unknown-property": 1,
    // "react/prefer-es6-class": 1,
    // "react/prop-types": 1,
    // "react/react-in-jsx-scope": 1,
    // "react/require-extension": 1,
    // "react/self-closing-comp": 1,
    // "react/sort-comp": 1,
    // "react/wrap-multilines": 0,

    // ERRORS (TREAT AS WARNINGS BECAUSE WEBPACK/ESLINT-PLUGIN WILL EXIT WITH ERROR)
    "brace-style": [1, "stroustrup", { "allowSingleLine": true }],
    "camelcase": [1, { "properties": "always" }],
    "comma-style": [1, "last"],
    "curly": [1, "all"],
    "eol-last": 1,
    "eqeqeq": 1,
    "handle-callback-err": [1, "error"],
    "jsx-quotes": [1, "prefer-double"],
    "keyword-spacing": [1, { "before": true, "after": true }],
    "no-labels": 1,
    "no-undef-init": 1,
    "no-unreachable": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": [1, { "vars": "all", "args": "after-used" }],
    "no-void": 1,
    "no-with": 1,
    //"object-shorthand": [1, "always"],
    "one-var": [1, { "uninitialized": "always", "initialized": "never" }],
    "operator-assignment": [1, "always"],
    "radix": 1,
    "semi-spacing": [1, { "before": false, "after": true }],
    "semi": [1, "always"],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, { "anonymous": "always", "named": "always" }],
    "space-infix-ops": [1, { "int32Hint": false }],
    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "use-isnan": 1,
    "valid-typeof": 1,
    "wrap-iife": 1,
    "yoda": [1, "never", { "exceptRange": true }],

    // WARNINGS
    "indent": [1, 4, { "SwitchCase": 1 }],
    "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
    "new-parens": 1,
    "no-alert": 1,
    "no-array-constructor": 1,
    "no-caller": 1,
    "no-catch-shadow": 1,
    "no-cond-assign": 1,
    "no-console": [1, { "allow": ["warn", "error"] }],
    "no-constant-condition": 1,
    "no-delete-var": 1,
    "no-div-regex": 1,
    "no-dupe-args": 1,
    "no-dupe-keys": 1,
    "no-duplicate-case": 1,
    "no-empty-character-class": 1,
    "no-empty": 1,
    "no-eval": 1,
    "no-ex-assign": 1,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-extra-boolean-cast": 1,
    "no-extra-semi": 1,
    "no-fallthrough": 1,
    "no-floating-decimal": 1,
    "no-func-assign": 1,
    "no-implied-eval": 1,
    "no-inner-declarations": [1, "functions"],
    "no-invalid-regexp": 1,
    "no-irregular-whitespace": 1,
    "no-iterator": 1,
    "no-label-var": 1,
    "no-lonely-if": 1,
    "no-mixed-requires": [1, true],
    "no-mixed-spaces-and-tabs": 1,
    "no-multi-spaces": 1,
    "no-multi-str": 1,
    "no-negated-in-lhs": 1,
    "no-new-object": 1,
    "no-new-require": 1,
    "no-new-wrappers": 1,
    "no-new": 1,
    "no-obj-calls": 1,
    "no-octal-escape": 1,
    "no-octal": 1,
    "no-param-reassign": 1,
    "no-path-concat": 1,
    "no-proto": 1,
    "no-redeclare": 1,
    "no-regex-spaces": 1,
    "no-return-assign": 1,
    "no-script-url": 1,
    "no-sequences": 1,
    "no-shadow-restricted-names": 1,
    "no-shadow": 1,
    "no-spaced-func": 1,
    "no-sparse-arrays": 1,
    "no-sync": 1,
    "no-throw-literal": 1,
    "no-undef": 1,
    "object-curly-spacing": [1, "always", { "objectsInObjects": true, "arraysInObjects": true }],
    "quote-props": [1, "as-needed"],
    "quotes": [1, "single", "avoid-escape"]

    // "default-case": 0,
    // "func-names": 0,
    // "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
    // "max-len": [2, 150],
    // "no-console": 0,
    // "no-nested-ternary": 0,
    // "no-param-reassign": 0,
    // "no-var": 0,
    // "no-use-before-define": 0,
    // "one-var": [2, { "uninitialized": "always", "initialized": "never" }],
    // "one-var-declaration-per-line": [2, "initializations"],
    // "spaced-comment": [2, "always", { "exceptions": ["*"] }],
    // "space-before-function-paren": [2, { "anonymous": "always", "named": "always" }],
    // "vars-on-top": 0,
    // "react/jsx-indent-props": 0,
    // "react/sort-comp": 0
  }
}
